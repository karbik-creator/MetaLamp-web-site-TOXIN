mixin toggle_btn(title='Получать спецпредложения',styleBorder='',styleInput='')
    .checkbox(data-type='checkbox')
        input.checkbox-input-hidden(type="checkbox", name="toggle_btn" value=title)
        .checkbox-title=title
            .checkbox-input-visible
                span.border(style=styleBorder)
                span.circle(style=styleInput)
            

