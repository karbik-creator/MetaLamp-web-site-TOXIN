mixin info_list(array=[{img:'insert_emoticon',title:'Комфорт',text:'Шумопоглощающие стены'},{img:'location_city',title:'Комфорт',text:'Шумопоглощающие стены'},{img:'location_city',title:'Комфорт',text:'Шумопоглощающие стены'}],styleImg='')
    .info__list
        each item in array
            .info__list__item
                span.material-icons.info__list__item-img(style=styleImg)=item.img
                .info__list__item-info
                    .info__list__item-title=item.title 
                    .info__list__item-text=item.text

link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
+info_list