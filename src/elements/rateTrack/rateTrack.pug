mixin rateTrack(styleActiveStar='../.././img/activeStar.svg',styleStar='../.././img/borderStar.svg') 
  .rate-track.rating_set
    .rate-track__wrapper
      span(style=`background-image:url(${styleStar})`)
      .rate-track__active
        span(style=`background-image:url(${styleActiveStar})`)
      .rate-track__items
        input.rate-track__item(type="radio" value="1")
        input.rate-track__item(type="radio" value="2")
        input.rate-track__item(type="radio" value="3")
        input.rate-track__item(type="radio" value="4")
        input.rate-track__item(type="radio" value="5")

+rateTrack